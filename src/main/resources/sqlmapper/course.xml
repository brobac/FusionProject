<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CourseMapper">
    <resultMap id="result" type="domain.model.Course">
        <result property="id" column="course_SQ"/>
        <result property="courseCode" column="course_code"/>
        <result property="department" column="department"/>
        <result property="targetYear" column="target_year"/>
        <result property="courseName" column="course_name"/>
        <result property="credit" column="credit"/>
    </resultMap>


    <select id="ReadAll" resultMap="result">
        SELECT *
        FROM COURSES_TB
    </select>

    <select id="FindByOption" resultMap="result" parameterType="CourseOption">
        SELECT *
        FROM COURSES_TB
        <where>

        </where>
    </select>


    <select id="ReadTargetGrade" resultMap="result" parameterType="_int">
        SELECT *
        FROM COURSES_TB
        WHERE target_year = #{year}
    </select>

    <update id="UpdateCourse">
        UPDATE COURSES_TB
        SET course_code=#{courseCode},
            department=#{department},
            course_name=#{courseName},
            target_year=#{targetYear},
            credit=#{credit}
        WHERE course_SQ = #{id}
    </update>

    <insert id="CreateCourse">
        INSERT INTO COURSES_TB(course_SQ, course_code, department, course_name, target_year, credit)
        VALUES (#{id}, #{courseCode}, #{department}, #{courseName}, #{targetYear}, #{credit})
    </insert>

</mapper>